    style.
      #map {
        width: 100%;
        height: 500px;
        border-radius: 1rem;
        box-shadow: 0 0.5rem 1rem rgba(44, 90, 160, 0.08);
        margin-bottom: 2rem;
      }
      .legend {
        background: #fff;
        border-radius: 0.5rem;
        box-shadow: 0 0.25rem 0.5rem rgba(44, 90, 160, 0.08);
        padding: 1rem 2rem;
        display: inline-block;
        margin-bottom: 2rem;
      }
      .legend span {
        display: inline-block;
        width: 1.2em;
        height: 1.2em;
        margin-right: 0.5em;
        border-radius: 0.3em;
        vertical-align: middle;
      }
      .legend .shelter {
        background: #2c5aa0;
      }
      .legend .food {
        background: #28a745;
      }
      .legend .treatment {
        background: #ffc107;
      }
      .legend .support {
        background: #dc3545;
      }
